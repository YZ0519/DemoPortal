@using Shared.Helper
@using SimplePOSWeb.Services.Abstraction
@inject ITokenServices TokenServices
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DemoPortal - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Favicons -->
    <link href="~/lib/assets/img/favicon.png" rel="icon">
    <link href="~/lib/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link rel="stylesheet" href="~/lib/assets/vendor/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/lib/assets/vendor/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/lib/assets/vendor/vendors/jvectormap/jquery-jvectormap.css">
    <link rel="stylesheet" href="~/lib/assets/vendor/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/lib/assets/vendor/vendors/owl-carousel-2/owl.carousel.min.css">
    <link rel="stylesheet" href="~/lib/assets/vendor/vendors/owl-carousel-2/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/lib/assets/vendor/css/style.css">
    <!-- Template Main CSS File -->

    <link href="~/css/sweetalert2-dark.css" rel="stylesheet">
    <link href="~/css/select2.min.css" rel="stylesheet">
    <link href="~/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="~/css/select2-bootstrap-5-theme.min.css" rel="stylesheet">
    @await RenderSectionAsync("Css", required: false)
</head>
<body>
    <div class="container-scroller">
        <!-- partial:partials/_sidebar.html -->
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
                <img class="ms-1" src="~/lib/assets/img/logo.png" alt="">
                <a class="p-0 sidebar-brand brand-logo text-decoration-none" href="index.html"><span class="d-none d-lg-block text-white">DemoPortal</span></a>
            </div>
            <ul class="nav">
                <li class="nav-item profile">
                    <div class="profile-desc">
                        <div class="profile-pic">
                            <div class="count-indicator">
                                <img class="img-xs rounded-circle " src="~/lib/assets/img/profile-img.png" alt="">
                                <span class="count bg-success"></span>
                            </div>
                            <div class="profile-name">
                                <h5 class="mb-0 font-weight-normal">@TokenServices.GetUsername()</h5>
                                @Html.Hidden("Expires", @TokenServices.GetExpires())
                            </div>
                        </div>
                    </div>
                </li>
                <li class="nav-item nav-category">
                    <span class="nav-link">Navigation</span>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="index.html">
                        <span class="menu-icon">
                            <i class="mdi mdi-speedometer"></i>
                        </span>
                        <span class="menu-title">Dashboard</span>
                    </a>
                </li>
                
            </ul>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_navbar.html -->
            <nav class="navbar p-0 fixed-top d-flex flex-row">
                <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
                    <a class="navbar-brand brand-logo-mini" href="index.html"><img src="~/lib/assets/vendor/images/logo-mini.svg" alt="logo" /></a>
                </div>
                <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
                    <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                        <span class="mdi mdi-menu"></span>
                    </button>
                    <ul class="navbar-nav navbar-nav-right">
                        <li class="nav-item dropdown">
                            <a class="nav-link" id="profileDropdown" href="#" data-bs-toggle="dropdown">
                                <div class="navbar-profile">
                                    <img class="img-xs rounded-circle" src="~/lib/assets/img/profile-img.png" alt="">
                                    <p class="mb-0 d-none d-sm-block navbar-profile-name">@TokenServices.GetUsername()</p>
                                    <i class="mdi mdi-menu-down d-none d-sm-block"></i>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="profileDropdown">
                                <a class="dropdown-item preview-item" href="@ConstantHelper.Url.SignOut">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-dark rounded-circle">
                                            <i class="mdi mdi-logout text-danger"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content">
                                        <p class="preview-subject mb-1">Log out</p>
                                    </div>
                                </a>
                            </div>
                        </li>
                    </ul>
                    <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                        <span class="mdi mdi-format-line-spacing"></span>
                    </button>
                </div>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
                <footer class="footer">
                    <div class="d-sm-flex justify-content-center">
                        <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">
                            &copy; Copyright <strong><span>DemoPortal</span></strong> 2024. All Rights Reserved
                            <span class="credits">
                                <!-- All the links in the footer should remain intact. -->
                                <!-- You can delete the links only if you purchased the pro version. -->
                                <!-- Licensing information: https://bootstrapmade.com/license/ -->
                                <!-- Purchase the pro version with working PHP/AJAX contact form: https://www.bootstrapdash.com/bootstrap-admin-template/ -->
                                Designed by <a href="https://www.bootstrapdash.com/bootstrap-admin-template/">Bootstrapdash.com</a>
                            </span>
                        </span>
                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- Vendor JS Files -->
    <script src="~/lib/assets/vendor/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/lib/assets/vendor/vendors/chart.js/Chart.min.js"></script>
    <script src="~/lib/assets/vendor/vendors/progressbar.js/progressbar.min.js"></script>
    <script src="~/lib/assets/vendor/vendors/jvectormap/jquery-jvectormap.min.js"></script>
    <script src="~/lib/assets/vendor/vendors/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/lib/assets/vendor/vendors/owl-carousel-2/owl.carousel.min.js"></script>
    <script src="~/lib/assets/vendor/js/jquery.cookie.js" type="text/javascript"></script>
    <script src="~/lib/assets/vendor/js/off-canvas.js"></script>
    <script src="~/lib/assets/vendor/js/hoverable-collapse.js"></script>
    <script src="~/lib/assets/vendor/js/misc.js"></script>
    <script src="~/lib/assets/vendor/js/settings.js"></script>
    <script src="~/lib/assets/vendor/js/todolist.js"></script>
    <script src="~/lib/assets/vendor/js/dashboard.js"></script>

    <!-- Template Main JS File -->
    <script src="~/js/sweetalert2.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @* <script src="~/js/active-configuration.js" asp-append-version="true"></script> *@
    <script src="~/js/select2.full.min.js"></script>

    <script src="~/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/js/dataTables.bootstrap5.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        const SubDomain = "@ConstantHelper.Url.SubDomain"
        $(document).ready(function () {

            if ('@TempData["ErrorMsg"]') {
                Swal.fire({
                    title: "Error",
                    text: "@TempData["ErrorMsg"]",
                    icon: "error"
                });
            }
            if ('@TempData["SuccessMsg"]') {
                Swal.fire({
                    title: "Success",
                    text: "@TempData["SuccessMsg"]",
                    icon: "success"
                });
            }
            checkIsExpired();
        });
        function checkIsExpired() {
            let expires = document.getElementById("Expires").value;
            if (expires != "") {
                let targetDate = new Date(expires);
                let currentDate = new Date();
                if (currentDate > targetDate) {
                    Swal.fire({
                        title: "Your session has timed out",
                        text: 'Please login again.',
                        icon: "info"
                    }).then(function () {
                        window.location = "@Url.Action("Logout", "Auth")";
                    });
                } else {
                    setTimeout(checkIsExpired, 10000);
                }
            }
        }
    </script>
</body>
</html>
